<!DOCTYPE html>
<html>
<head>
  <link rel="stylesheet" href="css/main.css">
</head>
<h1>Linux Developer Report</h1>
<body>
<table>
    <thead>
        <tr>
            <th>Hostname</th>
            <th>Operating System</th>
            <th>PATH</th>
            <th>Kernel</th>
            <th>Python Version</th>
            <th>Package Manager</th>
            <th>System Date Time</td>
        </tr>
    </thead>
    <tbody>
{% for linux_node in groups['control_nodes'] %}
        <tr>
            <td>{{ hostvars[linux_node]['ansible_hostname'] }}</td>
            <td>{{ hostvars[linux_node]['ansible_distribution'] }} {{hostvars[linux_node]['ansible_distribution_version']}}</td>
            <td>{{ hostvars[linux_node]['ansible_env']['PATH'] }}</td>
            <td>{{ hostvars[linux_node]['ansible_kernel'] }}</td>
            <td>{{ hostvars[linux_node]['ansible_python_version'] }}</td>
            <td>{{ hostvars[linux_node]['ansible_pkg_mgr'] }}</td>
            <td>{{ hostvars[linux_node]['ansible_date_time']['date'] }}</td>
            
        </tr>
{% endfor %}
    </tbody>
</table>
</body>

<h1>Windows Developer Report</h1>
<body>
<table>
    <thead>
        <tr>
            <th>Hostname</th>
            <th>Operating System</th>
            <th>PATH</th>
            <th>Kernel</th>
            <th>Powershell Version</th>
            <th>System Date Time</td>
        </tr>
    </thead>
    <tbody>
{% for win_node in groups['windows'] %}
        <tr>
            <td>{{ hostvars[win_node]['ansible_hostname'] }}</td>
            <td>{{ hostvars[win_node]['ansible_os_name'] }}</td>
            <td>{{ hostvars[linux_node]['ansible_env']['PATH'] }}</td>
            <td>{{ hostvars[win_node]['ansible_system'] }} {{ hostvars[win_node]['ansible_kernel'] }}</td>
            <td>{{ hostvars[win_node]['ansible_powershell_version'] }}</td>
            <td>{{ hostvars[win_node]['ansible_date_time']['date'] }}</td>            
        </tr>
{% endfor %}
    </tbody>
</table>
</body>

</html>
